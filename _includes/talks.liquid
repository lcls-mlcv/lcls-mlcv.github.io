<div class="col">
  <a href="{% if talk.redirect %}{{ talk.redirect }}{% else %}{{ talk.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if talk.img %}
        {%
          include figure.liquid
          loading="eager"
          path=talk.img
          sizes = "250px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ talk.title }}</h2>
        <p class="card-subtitle">{{ talk.speaker }}</p>
        <p class="card-text">{{ talk.date | date: "%B %d, %Y" }}</p>
        <div class="row ml-1 mr-1 p-0">
        </div>
      </div>
    </div>
  </a>
</div>
