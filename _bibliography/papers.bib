	author = {Hewitt*, Rick A. and Dalton*, Kevin M. and Mendez, Derek A. and Wang, Harrison K. and Klureza, Margaret A. and Brookner, Dennis E. and Greisman, Jack B. and McDonagh, David and Šrajer, Vukica and Sauter, Nicholas K. and Brewster, Aaron S. and Hekstra, Doeke R.},
