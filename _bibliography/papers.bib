	urldate = {2024-12-11},
	journal = {Structural Dynamics},
	author = {Zielinski, Kara A. and Dolamore, Cole and Wang, Harrison K. and Henning, Robert W. and Wilson, Mark A. and Pollack, Lois and Srajer, Vukica and Hekstra, Doeke R. and Dalton, Kevin M.},
